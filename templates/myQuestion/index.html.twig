{% extends 'base.html.twig' %}

{% block title %}My Questions{% endblock %}

{% block body %}
<div>
    <ul class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li>MyQuestion</li>
    </ul>
</div>
<div class="container mt-3">
    <div class="row justify-content-between">
        <div class="col-lg-3">
            <h3 class="header text-center">Your Questions</h3>
        </div>
        <div class="col-3.5 pt-4">
        <button class="btn ask" type="button" ><a id="ask" href="{{ path('question_new') }}">Ask question</a></button>
        </div>
    </div>
    {% for question in questions %}
        <div class="container">
            <div class="row justify-content-center" >
                <div class="col-lg-1" style=" margin-right: 20px; margin-left: 30px; padding-right: 70px;">
                    <div class="status" style="margin-right: 30px">
                            <strong>{{ question.answers.count }}</strong>
                            <p><small>Answers</small></p>
                    </div>
                </div>
            <div class="col-question col-lg-8" >
                <div>
                    <a href="{{ path('question_show', {slug: question.slug}) }}" style="text-decoration: none; color: #ff6c71; font-size: 20px; font-weight: bold; text-align: center; text-shadow: 2px 1px 3px #d05e62;">
                        {{ question.title }}</a>
                    <p>{{ question.content|striptags|u.truncate(200, '...')|raw }}</p>
                </div>
            </div>
            {% for tag in question.tags %}
                <div class="col-sm align-self-center">
                    <p class="tag ms-5 mb-1"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}">{{ tag.name }}</a></small></span></p>
            {% endfor %}
            <p class="text-muted ms-5" style="width: 150px">
                <small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                <span class="text-info"> {{ question.user.username }}</span>
                </small>
            </p>
            </div>
        </div>
    </div>
</div>
        {% else %}
            <p>No questions yet.</p>
        {% endfor %}
</div>
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}
