{% extends 'base.html.twig' %}

{% block title %}All Questions{% endblock %}

{% block stylesheets %}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .status{
            color: hsl(0,0%,100%);
            padding: 7px 0 5px;
            border-radius: 3px;
            border: 1px solid transparent;
            background-color: #9d4447;
            margin-bottom: 8px;
            text-align: center;

        }
        .tag span{
            background-color: #fcabb0;
            border: 1px solid transparent;
            border-radius: 3px;
            padding: 2px;
            margin-left: 55px;
        }
    </style>
    {{ parent() }}
    <link href="/assets/styles/layout.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {#  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    #}{% endblock %}


{% block body %}

    <h1 class="header text-center">Your Questions</h1>


    <div class="container">
        <div class="row">
            <div class="col-7 offset-2">

            </div>
            <div class="col-2">
                <a class="text-primary" href="{{ path('question_new')}}"> Ask Question</a>
            </div>
        </div>
        {% for question in questions %}
            <div class="row justify-content-center">
                <div class="col-lg-1">
                    <div class="status">
                        <strong>{{ question.answers.count }}</strong>
                        <p><small>Answers</small></p>
                    </div>
                </div>

                <div class="col-lg-8">
                    <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                        {{ question.title }}</a>
                    <p>{{ question.content|striptags(200, '...')|raw ~ '...' }}</p>
                </div>

            </div>

            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-7">
                    <div class="row">
                        {% for tag in question.tags %}
                            <div class="col-lg-1 m-3">
                                <p class="tag"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}" class="text-primary">
                                        {{ tag.name }}</a></small></span></p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-lg-3">
                    <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                            </small></p>
                </div>
            </div>
        {% else %}
            <p>No questions yet.</p>
        {% endfor %}
    </div>
{% endblock %}
