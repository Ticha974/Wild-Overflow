{% extends 'base.html.twig' %}

{% block title %}{{ tag.name }}{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<style>
    .status{
        color: hsl(0,0%,100%);
        padding: 7px 0 5px;
        border-radius: 3px;
        border: 1px solid transparent;
        background-color: cornflowerblue;
        margin-bottom: 8px;
        text-align: center;
    }

    </style>
{% endblock %}

{% block javascripts %}
    <script>
        const list = document.querySelectorAll('.list');
        function activeLink(){
            list.forEach((item) =>
                item.classList.remove('active'));
            this.classList.add('active');
        }
        list.forEach((item) =>
            item.addEventListener('click', activeLink));
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

    <h1 class="header text-center"></h1>
    <div class="container">
        <div class="row justify-content-center">
                <div class="col-8">
                    <h3>Questions tagged [{{ tag.name }}]</h3>
                </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-4 border-bottom">
                {{ tag.questions.count }} questions
            </div>
            <div class="col-4 border-bottom">
                <ul class="list-inline">
                    <li class="list-inline-item border"><a href="?tab=newest">Newest</a></li>
                    <li class="list-inline-item border"><a href="?tab=active">Active</a></li>
                    <li class="list-inline-item border {% if '?tab=unanswered' in (app.request.requesturi) %}active{% endif %}"><a href="?tab=unanswered">Unanswered</a></li>
                </ul>
            </div>
        </div>

        {% if '?tab=newest' in (app.request.requesturi) %}
            {% for question in tag.questions|sort|reverse %}
               <!-- {{ question.createdAt|date('Y-m-d H:i:s') }}-->
                <div class="row justify-content-center">
                    <div class="col-lg-1">
                        <div class="status">
                            <strong>{{ question.answers.count }}</strong>
                            <p><small>Answers</small></p>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                            {{ question.title }}</a>
                        <p>{{ question.content|striptags[:200] ~ '...' }}</p>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-lg-3">
                        <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                <span class="text-info"> {{ question.user.username }}</span></small></p>
                    </div>
                </div>
            {% endfor %}

        {% elseif  '?tab=unanswered' in (app.request.requesturi) %}
            {% for question in tag.questions %}
                {% if question.answers.count == 0 %}
                    <div class="row justify-content-center">
                        <div class="col-lg-1">
                            <div class="status">
                                <strong>{{ question.answers.count }}</strong>
                                <p><small>Answers</small></p>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                                {{ question.title }}</a>
                            <p>{{ question.content|striptags[:200] ~ '...' }}</p>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-lg-3">
                            <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                    <span class="text-info"> {{ question.user.username }}</span></small></p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

        {% elseif  '?tab=active' in (app.request.requesturi) %}
            {% for question in tag.questions %}
                {% if not question.validated() %}
                        <div class="row justify-content-center">
                            <div class="col-lg-1">
                                <div class="status">
                                    <strong>{{ question.answers.count }}</strong>
                                    <p><small>Answers</small></p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                                    {{ question.title }}</a>
                                <p>{{ question.content|striptags[:200] ~ '...' }}</p>
                            </div>
                        </div>
                    <div class="row justify-content-end">
                        <div class="col-lg-3">
                            <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                    <span class="text-info"> {{ question.user.username }}</span></small></p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

    {% else %}
        <div class="row justify-content-center">
                {% for question in tag.questions %}
                    <div class="row justify-content-center">
                        <div class="col-lg-1">
                            <div class="status">
                                <strong>{{ question.answers.count }}</strong>
                                <p><small>Answers</small></p>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                                {{ question.title }}</a>
                            <p>{{ question.content|striptags[:200] ~ '...' }}</p>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                <span class="text-info"> {{ question.user.username }}</span></small></p>
                    </div>
            {% else %}
            <p>No Answer</p>
            {% endfor %}
        </div>
    </div>
        {% endif %}
{% endblock %}
