{% extends 'base.html.twig' %}

{% block title %}{{ tag.name }}{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<style>
    .status{
        color: hsl(0,0%,100%);
        padding: 7px 0 5px;
        border-radius: 3px;
        border: 1px solid transparent;
        background-color: cornflowerblue;
        margin-bottom: 8px;
        text-align: center;

    }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}


{% block body %}
    <h1 class="header text-center"></h1>
    <div class="container">
        <div class="row justify-content-center">
                <div class="col-8">
                    <h3 class="text-primary">{{ tag.name }}</h3>
                </div>
        </div>
        <div class="row justify-content-center">
                {% for question in tag.questions %}
                    <div class="row justify-content-center">
                        <div class="col-lg-1">
                            <div class="status">
                                <strong>{{ question.answers.count }}</strong>
                                <p><small>Answers</small></p>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <a href="{{ path('question_show', {id: question.id}) }}" class="text-primary" style="text-decoration: none">
                                {{ question.title }}</a>
                            <p>{{ question.content|striptags[:200] ~ '...' }}</p>
                        </div>
                    </div>
            {% else %}
            <p>No Answer</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
