{% extends 'base.html.twig' %}

{% block title %}{{ tag.name }}{% endblock %}

{% block stylesheets %}
    {#  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    #}<style>
    .status{
        color: hsl(0,0%,100%);
        padding: 7px 0 5px;
        border: 1px solid transparent;
        background-color: cornflowerblue;
        margin-bottom: 8px;
        text-align: center;
        border-radius: 50%;
        width: 80px;
    }
    .tag span{
        background-color: lightsteelblue;
        border: 1px solid transparent;
        border-radius: 3px;
        padding: 2px;
    }
</style>
    {{ parent() }}
    <link href="/assets/styles/bootstrap.css" rel="stylesheet">
    <link href="/assets/styles/question.css" rel="stylesheet">
    <link href="/assets/styles/layout.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

    <h1 class="header text-center"></h1>
    <div class="container">
        <div class="row justify-content-center">
                <div class="col-8">
                    <h3>Questions tagged [{{ tag.name }}]</h3>
                </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-4 border-bottom">
                {{ tag.questions.count }} questions
            </div>
            <div class="col-4 border-bottom">
                <ul class="list-inline">
                    <li class="list-inline-item border "><a href="?tab=newest">Newest</a></li>
                    <li class="list-inline-item border"><a href="?tab=active">Active</a></li>
                    <li class="list-inline-item border"><a href="?tab=unanswered">Unanswered</a></li>
                </ul>
            </div>
        </div>

        {% if '?tab=newest' in (app.request.requesturi) %}
            {% for question in tag.questions|sort|reverse %}
                <!--{{ question.createdAt|date('Y-m-d H:i:s') }}-->
                <div class="row justify-content-center">
                    <div class="col-lg-1">
                        <div class="status">
                            <strong>{{ question.answers.count }}</strong>
                            <p><small>Answers</small></p>
                        </div>
                    </div>
                    <div class="container-inner">
                        <div class="sticky-container">
                            <div class="sticky-outer">
                                <div class="sticky">
                                    <svg width="0" height="0">
                                        <defs>
                                            <clipPath id="stickyClip" clipPathUnits="objectBoundingBox">
                                                <path
                                                        d="M 0 0 Q 0 0.69, 0.03 0.96 0.03 0.96, 1 0.96 Q 0.96 0.69, 0.96 0 0.96 0, 0 0"
                                                        stroke-linejoin="round"
                                                        stroke-linecap="square"
                                                />
                                            </clipPath>
                                        </defs>
                                    </svg>
                    <div class="sticky-content">

                        </div>
                    </div>
                    <div class="col-lg-8">
                        <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                            {{ question.title }}</a>
                        <p>{{ question.content|striptags[:200] ~ '...' }}</p>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-lg-3">
                        <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                <span class="text-info"> {{ question.user.username }}</span></small></p>
                    </div>
                </div>
            {% endfor %}

        {% elseif  '?tab=unanswered' in (app.request.requesturi) %}
            {% for question in tag.questions %}
                {% if question.answers.count == 0 %}
                    <div class="row justify-content-center">
                        <div class="col-lg-1">
                            <div class="status">
                                <strong>{{ question.answers.count }}</strong>
                                <p><small>Answers</small></p>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                                {{ question.title }}</a>
                            <p>{{ question.content|striptags[:200] ~ '...' }}</p>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-lg-3">
                            <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                    <span class="text-info"> {{ question.user.username }}</span></small></p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

        {% elseif  '?tab=active' in (app.request.requesturi) %}
            {% for question in tag.questions %}
                {% if not question.validated(question.answers) %}
                        <div class="row justify-content-center">
                            <div class="col-lg-1">
                                <div class="status">
                                    <strong>{{ question.answers.count }}</strong>
                                    <p><small>Answers</small></p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                                    {{ question.title }}</a>
                                <p>{{ question.content|striptags[:200] ~ '...' }}</p>
                            </div>
                        </div>
                    <div class="row justify-content-end">
                        <div class="col-lg-3">
                            <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                    <span class="text-info"> {{ question.user.username }}</span></small></p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

    {% else %}
        <div class="row justify-content-center">
                {% for question in tag.questions %}
                    <div class="row justify-content-center">
                        <div class="col-lg-1">
                            <div class="status">
                                <strong>{{ question.answers.count }}</strong>
                                <p><small>Answers</small></p>
                        </div>
                        <div class="col-lg-8">
                            <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                                {{ question.title }}</a>
                            <div style="font-size: 20px; color: #333333;     text-align: justify; width: 75%;">
                            <p>{{ question.content|u.truncate(100, '...')|raw }}</p>
                            </div>
                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                <span class="text-info"> {{ question.user.username }}</span></small></p>
                    </div>
            {% else %}
            <p>No Answer</p>
            {% endfor %}
        </div>
    </div>
        {% endif %}
{% endblock %}
