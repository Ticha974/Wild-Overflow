{% block body %}

                    <div class="container-fluid p-5  text-black text-center">
                        <h1> Find the best answer to your technical question, <br>help others answer theirs</h1>
                    </div>
                    {% for tags in tag %}
                         <div class="container" >
                             <div class="row" style="height: 50px">
                                <div class="col">
                                    <img src="{{ tags.symbolUrl }}" alt="img" height="40px">
                                </div>
                                <div class="col-6 align-text-left">
                                    <div class=" text-left"><h2>{{ tags.name }}</h2></div>
                                </div>
                                <div class="col-5">
                                    <div class="col-sm text-right pt-3" >
                                        <a href="{{ path('tag_question',{id: tags.id} )}} " class=""> See more</a>
                                    </div>
                                </div>
                             </div>
                             <div class="row ">
                                 <div style="background-color: {{ tags.colorCode }};width:10px;   margin-bottom: 30px;"></div>
                                    {% for question in tags.questions|slice(1,3) %}
                                        <div class="col-sm question" style="background-color: #E5E4E2;border-bottom: 4mm ridge {{ tags.colorCode }};">
                                            <img src="{{ tags.symbolUrl }}" alt="img" height="25px">
                                            <a href="{{ path('question_show', {id: question.id}) }}" class="text-primary" style="text-decoration: none; font-size: 20px">
                                                {{ question.title }}</a>
                                            <div style="height: 10px "></div>
                                            <p>{{ question.content|striptags[:200] ~ '...' }}</p>
                                        </div>
                                        <div style="width: 10px"></div>
                                    {% endfor %}
                                    <div style="height: 20px;"></div>
                                 </div>
                             </div>
                         </div>
                    {% endfor %}
