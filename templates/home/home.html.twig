{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}
{% block body %}
    <div class="container-fluid p-5  text-black text-center">
        <h1> Find the best answer to your technical question, help others answer theirs</h1>
    </div>
    <div class=" text-left"><h2>PHP</h2></div>
    <div class="container">
        <div class="row">
            {% for question in questions %}
                <div class="col-4" style="border: 1px solid black; ">
                    <a href=" {{question.title }}"></a>

                    <p>{{ question.content|raw|striptags[:300] ~ '...' }}</p>

                </div>
            {% endfor %}
            <div class="col-sm" >
                <button>see more</button>
            </div>
        </div>
    </div>
{% endblock %}
