{% extends 'base.html.twig' %}

{% block title %}Question-{{ question.id }}{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}


{% block body %}
    <h1 class="header text-center"></h1>
    <div class="container">
        <div class="row justify-content-center">
                <div class="col-8">
                    <h3 class="text-primary">{{ question.title }}</h3>
                    <p>{{ question.content|raw }}</p>
                </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-8">
                <h3 class="header">{{ (question.answers.count) }} Answers</h3>
            </div>
        </div>
        <div class="row justify-content-center">
                {% for answer in question.answers %}

                <div class="col-8">
                    <p class="text-info"><u>{{ answer.user.username }}</u></p>
                    <p>{{ answer.content|raw }}</p>
                </div>
            {% else %}
            <p>No Answer</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
