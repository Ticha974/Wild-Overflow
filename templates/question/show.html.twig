{% extends 'base.html.twig' %}

{% block title %}Question-{{ question.id }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .tag span{
            background-color: lightsteelblue;
            border: 1px solid transparent;
            border-radius: 3px;
            padding: 2px;
    }</style>
    <link href="/assets/styles/bootstrap.css" rel="stylesheet">
    <link href="/assets/styles/form.css" rel="stylesheet">
    <link href="/assets/styles/question.css" rel="stylesheet">
    <link href="/assets/styles/layout.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}


{% block body %}
    <h1 class="header text-center" style="font-size: 30px; max-width: 850px;">{{ question.title }}</h1>
    <p class="text-muted" style="width: 150px; margin-left: 500px;"><small style="display: flex; justify-content: space-between; width: 200px;">Asked {{ question.createdAt|date("m/d/Y") }}
            <span class="text-info"> {{ question.user.username }}</span></small></p>
    <div class="container">

        <div class="row justify-content-center">
                <div class="col-8" style="width: 80%;">
                    <h3 class="text-primary"></h3>
                    <p> <style> a { text-decoration: none; color: #ff6c71;}</style>{{ question.content|raw }}</p>
                </div>
            {% if app.user and app.user.id == question.user.id %}
                <a href="{{ path('question_edit', {'id': question.id}) }}" style="text-decoration: none; color: #ff6c71"  class="btn">Edit question</a>
            {% endif %}
        </div>
        <div class="row-tag">
            {% for tag in question.tags %}
                <div class="col-lg-1">
                    <p class="tag"><span><small><a href="{{ path('tag_question', {id: tag.id}) }}" class="text-primary">
                                        {{ tag.name }}</a></small></span></p>
                </div>
            {% endfor %}
        </div>
        <div class="row justify-content-center" STYLE="border-color: #484848">
            <div class="col-8">
                <h3 class="header">{{ (question.answers.count) }} Answers</h3>
            </div>
        </div>
        <div class="row justify-content-center" STYLE="border-color: #484848; background-color: #bababa; flex-direction: column; margin-bottom: 30px;">
                {% for answer in question.answers %}

                <div class="col-8" style="width: 80%;">
                    <p class="text-info"><u style="font-size: 18px; color: #ff6c71">{{ answer.user.username }}</u></p>
                    <p>{{ answer.content|raw }}</p>
                    <hr>
                </div>
            {% else %}
            <p>No Answer</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
