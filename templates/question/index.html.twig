{% extends 'base.html.twig' %}

{% block title %}All Questions{% endblock %}

{% block stylesheets %}
    {#  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    #}<style>
        .status{
            color: hsl(0,0%,100%);
            padding: 7px 0 5px;
            border: 1px solid transparent;
            background-color: #9d4447;
            margin-bottom: 8px;
            text-align: center;
            border-radius: 50%;
            width: 80px;
        }
        .tag span{
            background-color: #fcabb0;
            border: 1px solid transparent;
            border-radius: 3px;
            padding: 2px;
        }
    </style>
 {{ parent() }}
    <link href="/assets/styles/bootstrap.css" rel="stylesheet">
    <link href="/assets/styles/form.css" rel="stylesheet">
    <link href="/assets/styles/question.css" rel="stylesheet">
    <link href="/assets/styles/layout.css" rel="stylesheet">
{% endblock %}

{% block body %}

    <h1 class="header text-center">All Questions</h1>
    <a href="{{ path('question_latest')}}" class="btn" style="margin-top: 30px; margin-bottom: 5px; background-color: #ff6c71; color: #fffbfb; border-bottom-color: #9d4447; border-left-color: #9d4447; border-right-color: #9d4447; border-top-color: #9d4447; width: 120px">Latest Question
    </a>
        {% for question in questions %}
<div class="container">
            <div class="col-lg-1">
                <div class="status">
                    <strong>{{ question.answers.count }}</strong>
                    <p><small>Answers</small></p>
                </div>

    <div class="row" style="flex-direction: column">
            <div class="col-8" style="width: 80%;">
                <a href="{{ path('question_show', {slug: question.slug}) }}" style="text-decoration: none; color: #ff6c71; font-size: 20px; font-weight: bold; text-align: center;">
                    {{ question.title }}</a>
                <p>{{ question.content|u.truncate(100, '...')|raw }}</p>
            </div>
    </div>

    <div class="row-tag">
        {% for tag in question.tags %}
        <div class="col-lg-1 m-3">
            <p class="tag"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}" class="text-primary">
                            {{ tag.name }}</a></small></span></p>
        </div>

        {% endfor %}
        <div class="col-lg-3">
            <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                    <span class="text-info"> {{ question.user.username }}</span></small></p>
        </div>
    </div>
</div>
</div>
        {% else %}
            <p>No questions yet.</p>
        {% endfor %}
{% endblock %}
{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}
