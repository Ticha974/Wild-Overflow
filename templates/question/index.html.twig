{% extends 'base.html.twig' %}

{% block title %}All Questions{% endblock %}

{% block stylesheets %}
    {#  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    #}<style>
        .status{
            color: hsl(0,0%,100%);
            padding: 7px 0 5px;
            border: 1px solid transparent;
            background-color: #9d4447;
            margin-bottom: 8px;
            text-align: center;
            border-radius: 50%;
            width: 80px;
        }
        .tag span{
            background-color: #fcabb0;
            border: 1px solid transparent;
            border-radius: 3px;
            padding: 2px;
        }
    </style>
 {{ parent() }}
    <link href="/assets/styles/bootstrap.css" rel="stylesheet">
    <link href="/assets/styles/form.css" rel="stylesheet">
    <link href="/assets/styles/question.css" rel="stylesheet">
    <link href="/assets/styles/layout.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-between">
        <div class="col-3">
    <h3 class="header text-center">All Questions</h3>
        </div>
        <div class="col-3 pt-4">
            <button class="btn ask" type="button" ><a id="ask" href="{{ path('question_new') }}">Ask question</a></button>
        </div>
    </div>
        {% for question in questions %}
<div class="container">
    <div class="row justify-content-center" >
            <div class="col-lg-1" style=" margin-right: 20px;
    margin-left: 30px;
    padding-right: 70px;">
                <div class="status" style="margin-right: 30px">
                    <strong>{{ question.answers.count }}</strong>
                    <p><small>Answers</small></p>
                </div>
            </div>


            <div class="col-question col-lg-8" >
                <div class="">
                <a href="{{ path('question_show', {slug: question.slug}) }}" style="text-decoration: none; color: #ff6c71; font-size: 20px; font-weight: bold; text-align: center; text-shadow: 2px 1px 3px #d05e62;">
                    {{ question.title }}</a>
                <p>{{ question.content|u.truncate(200, '...')|raw }}</p>
                </div>
            </div>
        {% for tag in question.tags %}
            <div class="col-sm m-3">
                <p class="tag"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}">
                            {{ tag.name }}</a></small></span></p><br>


        {% endfor %}

                <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                        <span class="text-info"> {{ question.user.username }}</span></small></p>
            </div>
            </div>


</div>
</div>
        {% else %}
            <p>No questions yet.</p>
        {% endfor %}
{% endblock %}
{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}
