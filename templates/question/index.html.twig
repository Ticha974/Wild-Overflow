{% extends 'base.html.twig' %}
{% block title %}All Questions{% endblock %}


{% block body %}
    <div class="container mt-3">
        <div class="row justify-content-between">
            <div class="col-lg-6">
                <h3 class="header">All Questions</h3>
            </div>
            <div class="col-3.5 pt-4">
                <button class="btn ask" type="button" ><a id="ask" href="{{ path('question_new') }}">Ask question</a></button>
            </div>
        </div>
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <h4> {{ questions|length }} Question(s)</h4>
                </div>
                <div class="col-5">
                    <ul class="list-inline">
                        <a href="?tab=newest" class="filter"><li class="list-inline-item border {% if '?tab=newest' in (app.request.requesturi) %}filterSelected{% endif %}" >Newest</li></a>
                        <a href="?tab=active" class="filter"><li class="list-inline-item border {% if '?tab=active' in (app.request.requesturi) %}filterSelected{% endif %}">Active</li></a>
                        <a href="?tab=unanswered" class="filter "><li class="list-inline-item border {% if '?tab=unanswered' in (app.request.requesturi) %}filterSelected{% endif %}">Unanswered</li></a>
                    </ul>
                </div>
            </div>
    </div>

    {% if '?tab=newest' in (app.request.requesturi) %}
        {% for question in questions|sort|reverse %}
            <div class="container">
                <div class="row justify-content-center" >
                    <div class="col-lg-1" style=" margin-right: 20px; margin-left: 30px; padding-right: 70px;">
                        <div class="status" style="margin-right: 30px">
                            <strong>{{ question.answers.count }}</strong>
                            <p><small>Answers</small></p>
                        </div>
                    </div>
                    <div class="col-question col-lg-8" >
                        <div class="">
                            <a href="{{ path('question_show', {slug: question.slug}) }}" style="text-decoration: none; color: #ff6c71; font-size: 20px; font-weight: bold; text-align: center; text-shadow: 2px 1px 3px #d05e62;">
                                {{ question.title }}</a>
                            <p>{{ question.content|striptags|u.truncate(200, '...')|raw }}</p>
                        </div>
                    </div>
                    {% for tag in question.tags %}
                    <div class="col-sm align-self-center">
                        <p class="tag  ms-5 mb-1"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}">{{ tag.name }}</a></small></span></p>
                        {% endfor %}
                        <p class="text-muted ms-5" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                <span class="text-info"> {{ question.user.username }}</span></small></p>
                    </div>
                </div>
            </div>
            </div>

        {% endfor %}
    {% elseif '?tab=unanswered' in (app.request.requesturi) %}
        {% for question in questions %}
            {% if question.answers.count == 0 %}
            <div class="container">
                <div class="row justify-content-center" >
                    <div class="col-lg-1" style=" margin-right: 20px; margin-left: 30px; padding-right: 70px;">
                        <div class="status" style="margin-right: 30px">
                            <strong>{{ question.answers.count }}</strong>
                            <p><small>Answers</small></p>
                        </div>
                    </div>
                    <div class="col-question col-lg-8" >
                        <div class="">
                            <a href="{{ path('question_show', {slug: question.slug}) }}" style="text-decoration: none; color: #ff6c71; font-size: 20px; font-weight: bold; text-align: center; text-shadow: 2px 1px 3px #d05e62;">
                                {{ question.title }}</a>
                            <p>{{ question.content|striptags|u.truncate(200, '...')|raw }}</p>
                        </div>
                    </div>
                    {% for tag in question.tags %}
                    <div class="col-sm align-self-center">
                        <p class="tag  ms-5 mb-1"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}">{{ tag.name }}</a></small></span></p>
                        {% endfor %}
                        <p class="text-muted ms-5" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                <span class="text-info"> {{ question.user.username }}</span></small></p>
                    </div>
                </div>
            </div>
            </div>
        {% endif %}
        {% endfor %}

    {% elseif '?tab=active' in (app.request.requesturi) %}
        {% for question in questions %}
            {% if not question.validated(question.answers) %}
            <div class="container">
                <div class="row justify-content-center" >
                    <div class="col-lg-1" style=" margin-right: 20px; margin-left: 30px; padding-right: 70px;">
                        <div class="status" style="margin-right: 30px">
                            <strong>{{ question.answers.count }}</strong>
                            <p><small>Answers</small></p>
                        </div>
                    </div>
                    <div class="col-question col-lg-8" >
                        <div class="">
                            <a href="{{ path('question_show', {slug: question.slug}) }}" style="text-decoration: none; color: #ff6c71; font-size: 20px; font-weight: bold; text-align: center; text-shadow: 2px 1px 3px #d05e62;">
                                {{ question.title }}</a>
                            <p>{{ question.content|striptags|u.truncate(200, '...')|raw }}</p>
                        </div>
                    </div>
                    {% for tag in question.tags %}
                    <div class="col-sm align-self-center">
                        <p class="tag  ms-5 mb-1"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}">{{ tag.name }}</a></small></span></p>
                        {% endfor %}
                        <p class="text-muted ms-5" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                <span class="text-info"> {{ question.user.username }}</span></small></p>
                    </div>
                </div>
            </div>
            </div>
        {% endif %}
        {% endfor %}
    {% else %}
        {% for question in questions %}
            <div class="container">
                <div class="row justify-content-center" >
                    <div class="col-lg-1" style=" margin-right: 20px; margin-left: 30px; padding-right: 70px;">
                        <div class="status" style="margin-right: 30px">
                            <strong>{{ question.answers.count }}</strong>
                            <p><small>Answers</small></p>
                        </div>
                    </div>
                    <div class="col-question col-lg-8" >
                        <div class="">
                            <a href="{{ path('question_show', {slug: question.slug}) }}" style="text-decoration: none; color: #ff6c71; font-size: 20px; font-weight: bold; text-align: center; text-shadow: 2px 1px 3px #d05e62;">
                                {{ question.title }}</a>
                            <p>{{ question.content|striptags|u.truncate(200, '...')|raw }}</p>
                        </div>
                    </div>
                    {% for tag in question.tags %}
                    <div class="col-sm align-self-center">
                        <p class="tag  ms-5 mb-1"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}">{{ tag.name }}</a></small></span></p>
                        {% endfor %}
                        <p class="text-muted ms-5" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                <span class="text-info"> {{ question.user.username }}</span></small></p>
                    </div>
                </div>
            </div>
            </div>
            {% else %}
                <p>No Questions yet</p>
        {% endfor %}
    {% endif %}

{% endblock %}
