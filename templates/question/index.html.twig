{% extends 'base.html.twig' %}

{% block title %}All Questions{% endblock %}

{% block stylesheets %}
    <style>
        .status{
            color: hsl(0,0%,100%);
            padding: 7px 0 5px;
            border: 1px solid transparent;
            background-color: #9d4447;
            margin-bottom: 8px;
            text-align: center;
            border-radius: 50%;
            width: 80px;
        }
        .tag span{
            background-color: #fcabb0;
            border: 1px solid transparent;
            border-radius: 3px;
            padding: 2px;
        }
    </style>
    {{ parent() }}
    <link href="/assets/styles/bootstrap.css" rel="stylesheet">
    <link href="/assets/styles/form.css" rel="stylesheet">
    <link href="/assets/styles/question.css" rel="stylesheet">
    <link href="/assets/styles/layout.css" rel="stylesheet">
    <link href="/assets/styles/crumb.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div>
        <ul class="breadcrumb">
            <li><a href="/">
                    Home</a>
            </li>
            <li>
                    Question
            </li>

        </ul>
    </div>

    <div class="container">
        <div class="row mb-3">
            <div class="col-6">
                <h1 class="header text-center">All Questions</h1>
            </div>
            <div class="col-3 offset-3 pt-3">
                <a class="text-primary" href="{{ path('question_new')}}"> Ask Question</a>
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-lg-4">
                {{ questions|length }} Questions
            </div>
            <div class="col-4">
                <ul class="list-inline">
                    <li class="list-inline-item border"><a href="?tab=newest">Newest</a></li>
                    <li class="list-inline-item border"><a href="?tab=active">Active</a></li>
                    <li class="list-inline-item border"><a href="?tab=unanswered">Unanswered</a></li>
                </ul>
            </div>
        </div>

        {% if '?tab=newest' in (app.request.requesturi) %}
            {% for question in questions|sort|reverse %}
                <div class="row justify-content-center">
                    <div class="col-lg-1">
                        <div class="status">
                            <strong>{{ question.answers.count }}</strong>
                            <p><small>Answers</small></p>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                            {{ question.title }}</a>
                        <p>{{ question.content|striptags(200, '...')|raw ~ '...' }}</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-7">
                        <div class="row">
                            {% for tag in question.tags %}
                                <div class="col-lg-1 m-3">
                                    <p class="tag"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}" class="text-primary">
                                                    {{ tag.name }}</a></small></span></p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                <span class="text-info"> {{ question.user.username }}</span></small></p>
                    </div>
                </div>
            {% endfor %}

        {% elseif  '?tab=unanswered' in (app.request.requesturi)  %}
            {% for question in questions %}
                {% if question.answers.count == 0 %}
                    <div class="row justify-content-center">
                        <div class="col-lg-1">
                            <div class="status">
                                <strong>{{ question.answers.count }}</strong>
                                <p><small>Answers</small></p>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                                {{ question.title }}</a>
                            <p>{{ question.content|striptags(200, '...')|raw ~ '...' }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2"></div>
                            <div class="col-lg-7">
                                <div class="row">
                                    {% for tag in question.tags %}
                                        <div class="col-lg-1 m-3">
                                            <p class="tag"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}" class="text-primary">
                                                    {{ tag.name }}</a></small></span></p>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                    <span class="text-info"> {{ question.user.username }}</span></small></p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

        {% elseif  '?tab=active' in (app.request.requesturi) %}
            {% for question in questions %}
                {% if not question.validated %}
                    <div class="row justify-content-center">
                        <div class="col-lg-1">
                            <div class="status">
                                <strong>{{ question.answers.count }}</strong>
                                <p><small>Answers</small></p>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                                {{ question.title }}</a>
                            <p>{{ question.content|striptags(200, '...')|raw ~ '...' }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-7">
                            <div class="row">
                                {% for tag in question.tags %}
                                    <div class="col-lg-1 m-3">
                                        <p class="tag"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}" class="text-primary">
                                                    {{ tag.name }}</a></small></span></p>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                    <span class="text-info"> {{ question.user.username }}</span></small></p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

        {% else %}
            {% for question in questions %}
                <div class="row justify-content-center">
                    <div class="col-lg-1">
                        <div class="status">
                            <strong>{{ question.answers.count }}</strong>
                            <p><small>Answers</small></p>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <a href="{{ path('question_show', {slug: question.slug}) }}" class="text-primary" style="text-decoration: none">
                            {{ question.title }}</a>
                        <p>{{ question.content|striptags(200, '...')|raw ~ '...' }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2"></div>
                        <div class="col-lg-7">
                            <div class="row">
                                {% for tag in question.tags %}
                                    <div class="col-lg-1 m-3">
                                        <p class="tag"><span><small><a href="{{ path('tag_question', {slug: tag.slug}) }}" class="text-primary">
                                    {{ tag.name }}</a></small></span></p>
                                    </div>
                                {% endfor %}
                            </div>
                    </div>
                    <div class="col-lg-3">
                        <p class="text-muted" style="width: 150px"><small>Asked on: {{ question.createdAt|date("m/d/Y") }}
                                <span class="text-info"> {{ question.user.username }}</span></small></p>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
